<div class="row justify-content-center">
  <div class="card mt-4 col-6">
    <div class="card-body">
      <h1 class="text-center mb-3">New Recipe</h1>
      <form action="/" accept-charset="UTF-8" method="post" class="row">
        <div class="mb-3 row">
          <label for="name" class="col-sm-3 col-form-label">Name</label>
          <div class="col-sm-9">
            <input class="form-control" type="text" name="name" placeholder="Recipe name"/>
          </div>
        </div>
        <div class="mb-3 row">
          <label for="description" class="col-sm-3 col-form-label">Description</label>
          <div class="col-sm-9">
            <textarea class="form-control" name="description"s="4" placeholder="Recipe description"></textarea>
          </div>
        </div>

        <div class="mb-3 row align-items-center">
          <label for="rating" class="col-sm-3 col-form-label">Rating</label>
          <div class="col-sm-2">
            <input class="form-control" type="number" step="0.01" min="1" max="5" name="rating"/>
          </div>
          <div class="col-sm-7"> out of 5</div>
        </div>

        <div class="mb-3 row">
          <label for="prep_time" class="col-sm-3 col-form-label">Prep time</label>
          <div class="col-sm-9">
            <input class="form-control" type="text" name="prep_time" placeholder="1h 20mins"/>
          </div>
        </div>

        <div class="mb-3 row">
          <input type="submit" name="" value="Create Recipe" class="btn btn-primary btn-lg"/>
        </div>
      </form>
    </div>
  </div>
</div>
