<h1>New Recipe</h1>
<div class="card mt-4">
  <div class="card-body">
    <form action="/" accept-charset="UTF-8" method="post">
      <div class="mb-3 row">
        <label for="name" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="name" placeholder="Chocolate Pudding"/>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="description" class="col-sm-2 col-form-label">Description</label>
        <div class="col-sm-10">
          <textarea class="form-control" name="description" rows="4" placeholder="A simple, delicious snack for you and your friends."></textarea>
        </div>
      </div>

      <div class="mb-3 row">
        <label for="rating" class="col-sm-2 col-form-label">Rating</label>
        <div class="col-sm-10">
          <input class="form-control" type="number" step="0.01" min="1" max="5" name="rating"/>
        </div>
      </div>

      <div class="mb-3 row">
        <label for="prep_time" class="col-sm-2 col-form-label">Prep time</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="prep_time" placeholder="1h 20mins"/>
        </div>
      </div>

      <input type="submit" name="" value="Create Recipe" class="btn btn-primary"/>
    </form>
  </div>
</div>
